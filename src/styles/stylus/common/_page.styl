@import "_colors"
@import "./../mixin/mixins"
@import "./../extend/extends"
@import "./../variable"

.columns
	flexbox()
	justify-content space-between
	.column
		width 48%

.inputLine
	flexbox()
	align-items flex-start
	flex-wrap nowrap
	width 100%
	&:not(:last-child)
		margin-bottom 10px
	&.alert
		padding-bottom 20px
		input[type="text"], textarea
			border-color Red400
	&.validated
		input[type="text"], textarea
			border-color Green400
	.input
		position relative
		flex-grow 1
	.label
		width 110px
		padding-right 10px
		font-size 10pt
		color Gray600
		text-align right
	.inputRadio label
		padding-left 5px
	.inputRadio:not(:last-child)
		margin-right 20px
	+max-screen(1239)
		display block
		padding-bottom 10px
		.label
			text-align left

.submitBtn
	@extend .btn
	animate()
	width 180px
	text-align center
	line-height 40px
	font-size 9pt
	background-color Teal400
	color White
	&:hover
		background-color Teal600
	&.disabled
		background-color Gray300
		color Gray400
		&:hover
			background-color Gray300

.resetInput
	width 100%
	outline none
	border none
	font-size 14px
	line-height 1.5em
	padding 10px
	border 1px solid transparent
	background-color Gray100

.inputInreraction
	border-color Gray300
	&:hover
		border-color Gray400
	&:not(:disabled):focus
		border-color Teal400
	&:disabled
		border-color Gray100
		
input[type="text"]
	@extend .resetInput
	@extend .inputInreraction
	
input[type="number"]
	@extend .resetInput
	@extend .inputInreraction
	border-radius 5px
	border 1px solid Gray300
	text-align center

textarea
	@extend .resetInput
	@extend .inputInreraction
	outline none
	line-height 1.8em

input[type="checkbox"]
	margin-right 5px

select
	width 50px